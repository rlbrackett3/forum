<!DOCTYPE html>
<html>
<head>
  <title>Forum</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag('//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css', :media=>'all') %>
	<%= javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js', 'data-turbolinks-track' => true %>
	<style>
		body {
			text-align: center;
		}
		table {
			width: 400px;
			margin:0 auto;
		}
		html,
      body {
        height: 100%;
        /* The html and body elements cannot have any padding or margin. */
      }

      /* Wrapper for page content to push down footer */
      #wrap {
        min-height: 100%;
        height: auto !important;
        height: 100%;
        /* Negative indent footer by it's height */
        margin: 0 auto -60px;
      }

      /* Set the fixed height of the footer here */
      #push,
      #footer {
        height: 60px;
      }
      #footer {
        background-color: #f5f5f5;
      }

      /* Lastly, apply responsive CSS fixes as necessary */
      @media (max-width: 767px) {
        #footer {
          margin-left: -20px;
          margin-right: -20px;
          padding-left: 20px;
          padding-right: 20px;
        }
      }
      h1 {
				margin-top:60px;
      }
      h3 {
        margin-top: 60px;
      }
      .login {
        margin-top:60px;
      }
	</style>
</head>
<body>

<div id="wrap">

	<nav id="myNavbar" class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"><a href="/users"></a></span>
                <span class="icon-bar"><a href="/topics"></a></span>
                <span class="icon-bar"><a href="/replies"></a></span>
            </button>
            <a class="navbar-brand" href="/">Forum</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="nav navbar-nav">
                <li><a href="/users">Users</a></li>
                <li><a href="/topics">Topics</a></li>
                <li><a href="/replies">Replies</a></li>
            </ul>
        </div>
    </div>
	</nav>
      
	<%= flash[:notice] if flash[:notice] %>
	<%= flash[:alert] if flash[:alert] %>

  <div class="login">
  	<% if !current_user %>
  		<%= link_to 'Login', new_session_path %>
  	<% end %>
  	<% if session[:user_id] %>
  		<%= link_to 'Logout', session_path(session[:user_id]), method: :delete %>
  	<% end %>
  </div>
	<%= yield %>

	<div class="container">
        <p class="lead"></p>
      </div>

      <div id="push"></div>
    

	

	</div>



	

    <div id="footer">
      <div class="container">
        <p class="muted credit">Copyright 2014 Neil Daftary</p>
      </div>
    </div>

</body>
</html>
